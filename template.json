{
  "builders": [
  {
	  "boot_command": [
		  "<esc><esc><enter><wait>",
	  "/install/vmlinuz ",
	  "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
	  "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
	  "hostname={{.Name}} ",
	  "fb=false debconf/frontend=noninteractive ",
	  "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
	  "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
	  "initrd=/install/initrd.gz -- <enter>"
		  ],
	  "boot_wait": "5s",
	  "disk_size": 10480,
	  "headless": false,
	  "http_directory": "http",
	  "iso_checksum": "01545fa976c8367b4f0d59169ac4866c",
	  "iso_checksum_type": "none",
	  "iso_url": "file:/iso/ubuntu-14.04.1-server-amd64.iso",
	  "guest_os_type": "ubuntu-64",
	  "name": "trusty-64",
	  "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; echo 'install'|sudo -S sh '/tmp/shutdown.sh'",
	  "skip_compaction": true,
	  "tools_upload_flavor": "linux",
	  "ssh_port": 22,
	  "ssh_username": "vagrant",
	  "ssh_password": "install",
	  "ssh_wait_timeout": "10000s",
	  "type": "vmware-iso",
	  "vmx_data": {
		  "cpuid.coresPerSocket": "1",
		  "memsize": "480",
		  "numvcpus": "1"
	  }
  }
  ],
  "post-processors": [
	  "vagrant"
  ],
  "provisioners": [
	  {
		  "type": "shell",
		  "execute_command": "echo 'install'|sudo -S sh '{{.Path}}'",
		  "scripts": [
			  "scripts/sudo.sh",
			  "scripts/vagrant.sh",
			  "scripts/ssh.sh",
			  "scripts/vmtools.sh",
			  "scripts/puppet.sh",
			  "scripts/packages.sh",
			  "scripts/zero.sh"
		  ],
		  "type": "shell"
	  }
  ]
}
